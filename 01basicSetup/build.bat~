del /F /Q bin\app.exe

set GCC=D:/cSDL/mingw64/bin/gcc.exe
set files=main.c 

set head=-IcGuigle/include/SDL2 -IcGuigle/include/GL
set lib=-lmingw32 -lSDL2main -lSDL2 -mwindows -lopengl32 -LcGuigle/lib/ 

rem %GCC% %head% -c cGuigle/glew.c -o bin/glew.o
%GCC% %head% -Wall -o bin/app  %files% bin/glew.o %lib%

bin\app.exe

